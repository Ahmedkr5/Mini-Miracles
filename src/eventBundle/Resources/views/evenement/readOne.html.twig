
{% extends 'base.html.twig' %}
{% block body %}
    <div class="jumbotron text-center">
        <h2><label  for="topicOptions" style="font-size: 28px; color: #5bc0de;" class="ng-binding" >caracteristiques </label></h2>

    </div>
    <div class="jumbotron text-center">
        <div class="container">


            <center>




                <fieldset style="width: 30%;margin: auto;">
                    <TABLE class="table table-striped">

                        <tr><td>
                                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="border-bottom:none">
                                    <label  for="topicOptions" style="font-size: 18px; color: #0b3e6f;" class="ng-binding" >Lieu <i class="fa  fa-globe"></i></label>

                                    {{ evenement.lieu}}<br><br>

                                </div>
                            </td></tr>

                        <tr><td>
                                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="border-bottom:none">
                                    <label  for="topicOptions" style="font-size: 18px; color: #0b3e6f;" class="ng-binding" >Nom  <i class="fa  fa-child"></i></label>

                                    {{ evenement.nom}}<br><br>
                                </div>
                            </td></tr>

                        <tr><td>
                                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="border-bottom:none">
                                    <label  for="topicOptions" style="font-size: 18px; color: #0b3e6f;" class="ng-binding" >Prix <i class="fa  fa-money"></i></label>
                                    <br>

                                    {{evenement.prix| number_format(0,'',' ') }}<br><br>
                                </div>
                            </td></tr>

                        <tr><td>
                                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="border-bottom:none">
                                    <label  for="topicOptions" style="font-size: 18px; color: #0b3e6f;" class="ng-binding" >places<i class="fa fa-sort-numeric-asc"></i> </label>

                                    {{ evenement.nbPlaces }}<br><br>
                                </div>
                            </td></tr>

                        <tr><td>
                                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" style="border-bottom:none">
                                    <label  for="topicOptions" style="font-size: 18px; color: #0b3e6f;" class="ng-binding" >Date  <i class="fa fa-calendar"></i></label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
<br>
                                    {{ evenement.dateEvent|date("F - d - Y")  }}<br><br>

                                        </div>


                                    </div>
                                </div>
                            </td></tr>




                    </TABLE>
                </fieldset>

            </center>


        </div>
        <div class="text-right">

            <a href="{{ path('evenement_read') }}" class="btn btn-primary"> <i class="fa fa-list"> <br> Retour</i> </a>
        </div>


    </div>




{% endblock %}


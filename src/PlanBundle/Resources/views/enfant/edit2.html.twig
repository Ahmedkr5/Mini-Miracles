{% extends 'base.html.twig' %}

{% block body %}
    <h1>Selectioner un groupe</h1>
    <table  class="table table-striped">
        <thead>
        <tr>

            <th>Nom du group</th>
            <th>Ajouter</th>
        </tr>
        </thead>
        <tbody>
        {% for groupe in groupes %}
            <tr>

                <td>{{ groupe.nomGroup }}</td>
                <td>

                    <a href="{{ path('enfant_edit', { 'idGroup': groupe.idGroup }) }}" >Ajouter</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
